class TTSHandlerPiperNative:
    def __init__(self, config):
        self.config = config
        self.model_path = config.get('model_path', 'D:\\TTS_Voices\\piper\\fr_FR-siwis-medium.onnx')
        self.sample_rate = config.get('sample_rate', 22050)
        
        # VÃ©rifier que le modÃ¨le existe
        if not os.path.exists(self.model_path):
            raise FileNotFoundError(f"ModÃ¨le non trouvÃ©: {self.model_path}")
        
        # Chercher l'executable piper
        self._find_piper_executable()
        
    def _find_piper_executable(self):
        """Trouver l'executable piper"""
        # Chercher dans le venv actuel
        possible_paths = [
            os.path.join(os.getcwd(), 'venv_piper312', 'Scripts', 'piper.exe'),
            os.path.join(os.getcwd(), 'venv_piper312', 'bin', 'piper'),
            'piper.exe',
            'piper'
        ]
        
        for path in possible_paths:
            try:
                result = subprocess.run([path, '--help'], 
                                      capture_output=True, text=True, timeout=5)
                if result.returncode == 0:
                    self.piper_path = path
                    print(f"âœ… Piper trouvÃ©: {path}")
                    return
            except:
                continue
                
        # Fallback: essayer d'utiliser notre piper compilÃ©
        piper_dir = os.path.join(os.getcwd(), 'venv_piper312', 'Lib', 'site-packages', 'piper_tts')
        if os.path.exists(piper_dir):
            print(f"ğŸ“ RÃ©pertoire piper trouvÃ©: {piper_dir}")
            
        raise RuntimeError("Executable piper non trouvÃ©")
        
    def synthesize_with_cli(self, text, output_path):
        """SynthÃ¨se avec CLI piper natif"""
        try:
            # Commande piper native
            cmd = [
                self.piper_path,
                '--model', self.model_path,
                '--output_file', output_path,
                '--text', text
            ]
            
            print(f"ğŸ”„ Commande piper: {' '.join(cmd)}")
            
            result = subprocess.run(cmd, capture_output=True, text=True, timeout=30)
            
            if result.returncode == 0:
                print(f"âœ… Piper CLI rÃ©ussi")
                return True
            else:
                print(f"âŒ Erreur piper CLI: {result.stderr}")
                return False
                
        except Exception as e:
            print(f"âŒ Exception piper CLI: {e}")
            return False
            
    def load_wav_file(self, file_path):
        """Charger fichier WAV et convertir en numpy array"""
        try:
            with wave.open(file_path, 'rb') as wav_file:
                frames = wav_file.readframes(-1)
                sample_rate = wav_file.getframerate()
                channels = wav_file.getnchannels()
                sample_width = wav_file.getsampwidth()
                
                # Convertir en numpy array
                if sample_width == 1:
                    audio_data = np.frombuffer(frames, dtype=np.uint8)
                    audio_data = (audio_data.astype(np.float32) - 128) / 128.0
                elif sample_width == 2:
                    audio_data = np.frombuffer(frames, dtype=np.int16)
                    audio_data = audio_data.astype(np.float32) / 32767.0
                else:
                    audio_data = np.frombuffer(frames, dtype=np.int32)
                    audio_data = audio_data.astype(np.float32) / 2147483647.0
                
                # GÃ©rer stÃ©rÃ©o â†’ mono
                if channels == 2:
                    audio_data = audio_data.reshape(-1, 2).mean(axis=1)
                
                return audio_data, sample_rate
                
        except Exception as e:
            print(f"âŒ Erreur lecture WAV: {e}")
            return None, None
            
    def synthesize(self, text):
        """SynthÃ¨se vocale Piper NATIVE"""
        print(f"ğŸ‡«ğŸ‡· SynthÃ¨se Piper NATIVE (modÃ¨le original)")
        print(f"   ModÃ¨le: {self.model_path}")
        print(f"   Texte: '{text}'")
        
        try:
            # CrÃ©er fichier temporaire
            with tempfile.NamedTemporaryFile(suffix='.wav', delete=False) as tmp_file:
                tmp_path = tmp_file.name
            
            # SynthÃ¨se CLI native
            success = self.synthesize_with_cli(text, tmp_path)
            
            if success and os.path.exists(tmp_path):
                # Charger audio
                audio_data, wav_sample_rate = self.load_wav_file(tmp_path)
                
                if audio_data is not None:
                    print(f"   ğŸµ Audio natif gÃ©nÃ©rÃ©: {len(audio_data)} Ã©chantillons")
                    print(f"   ğŸ“Š Sample rate: {wav_sample_rate}Hz")
                    print(f"   ğŸ” Range audio: [{audio_data.min():.3f}, {audio_data.max():.3f}]")
                    
                    # VÃ©rifier qualitÃ©
                    amplitude = max(abs(audio_data.min()), abs(audio_data.max()))
                    if amplitude > 0.01:
                        print(f"   âœ… Audio natif franÃ§ais valide (amplitude: {amplitude:.3f})")
                    else:
                        print(f"   âš ï¸ Audio natif franÃ§ais faible (amplitude: {amplitude:.3f})")
                    
                    # Conversion pour lecture
                    audio_int16 = (audio_data * 32767).clip(-32767, 32767).astype(np.int16)
                    
                    # Nettoyage
                    try:
                        os.unlink(tmp_path)
                    except:
                        pass
                    
                    return audio_int16
                    
            # Nettoyage en cas d'erreur
            try:
                os.unlink(tmp_path)
            except:
                pass
                
            return np.array([], dtype=np.int16)
            
        except Exception as e:
            print(f"âŒ Erreur synthÃ¨se native: {e}")
            import traceback
            traceback.print_exc()
            return np.array([], dtype=np.int16)
    
    def speak(self, text):
        """SynthÃ¨se et lecture audio Piper natif"""
        audio_data = self.synthesize(text)
        
        if len(audio_data) > 0:
            print(f"   ğŸ”Š Lecture audio natif...")
            sd.play(audio_data, samplerate=self.sample_rate)
            sd.wait()
            print(f"   âœ… Lecture native terminÃ©e")
        else:
            print(f"   âŒ Pas d'audio natif Ã  lire")
            
        return audio_data 